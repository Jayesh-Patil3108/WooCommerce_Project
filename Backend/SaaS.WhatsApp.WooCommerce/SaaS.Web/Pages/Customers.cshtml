@page
@model SaaS.Web.Pages.CustomersModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Customers";
    ViewData["ActivePage"] = "Customers";
}
<header class="topbar">
    <h2>Customers - @Model.ClientName</h2>
    <div class="user-info">
        <input type="text" id="searchCustomers" placeholder="Search customers..." />
    </div>
</header>

@if (Model.Customers == null)
{
    <p>Loading...</p>
}
else if (!Model.Customers.Any())
{
    <p>No customers found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody id="customersTableBody">
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p class="error-message">@Model.ErrorMessage</p>
}